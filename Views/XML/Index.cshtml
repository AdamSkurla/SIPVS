@model dynamic
<h2>Create XML</h2>
<form method="post" action="/Xml/CreateXml">
    <div>
        <label>Root Element:</label>
        <input type="text" name="rootElement" required />
    </div>
    <div>
        <label>Child Element:</label>
        <input type="text" name="childElement" required />
    </div>
    <div>
        <label>Child Value:</label>
        <input type="text" name="childValue" required />
    </div>
    <button type="submit">Create XML and Convert to PDF</button>
</form>
